<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/textStartPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Point"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textStartName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStartPoint"
        android:text="..."
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textEndPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Point"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/textStartName"/>

    <TextView
        android:id="@+id/textEndName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEndPoint"
        android:text="..."
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/textEndName"
        android:layout_marginTop="20dp"
        android:text="Generate Routes"/>

    <TextView
        android:id="@+id/textJourneys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Route List"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buttonConfirm"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textJourneys"
        android:text="empty"
        android:textSize="14sp"
        android:visibility="invisible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactsRecycleView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textJourneys"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>



</RelativeLayout>